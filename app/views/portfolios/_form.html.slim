.col-md-8
  = form_for @portfolio do |f|
    - if @portfolio.errors.any?
      #error_explanation
        h2 = "#{pluralize(@portfolio.errors.count, "error")} prohibited this portfolio from being saved:"
        ul
          - @portfolio.errors.full_messages.each do |message|
            li = message

    .field.mb-3
      = f.label :name
      = f.text_field :name, class: 'form-control'
    .field.mb-3
      = f.label :etf
      = f.collection_select :etf_ids, Etf.all, :id, :name, {}, {class: 'custom-select', multiple: true}
    hr.mb-4
    .actions = f.submit submit_label, role: 'button', class: 'btn btn-primary'
